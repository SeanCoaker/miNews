<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAggregatorApp" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/product_sans</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_200</item>
        <item name="colorPrimaryVariant">@color/secondary_blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_700</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsAggregatorApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsAggregatorApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.NewsAggregatorApp.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomText</item>
        <item name="tabIndicatorColor">?attr/colorPrimaryVariant</item>
        <item name="tabSelectedTextColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/product_sans</item>
    </style>

    <style name="CustomNav" parent="Widget.Design.NavigationView">
        <item name="itemBackground">@drawable/drawer_background</item>
        <item name="itemIconTint">@color/drawer_icon_selected</item>
        <item name="itemTextColor">@color/drawer_icon_selected</item>
    </style>

</resources>