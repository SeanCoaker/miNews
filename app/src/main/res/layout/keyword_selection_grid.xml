<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonSport"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_sports_basketball_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/sport" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonTechnology"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_laptop_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTechnology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/technology" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonPolitics"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_mic_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPolitics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/politics" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonBusiness"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_attach_money_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/business" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonEntertainment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_format_paint_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewEntertainment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/entertainment" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonMedicine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_medical_services_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/medicine" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonFood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_baseline_fastfood_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/food" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonGaming"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_games_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewGaming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/gaming" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonMusic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_music_note_24"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/music" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</GridLayout>