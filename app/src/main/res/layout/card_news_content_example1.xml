<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_red"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="BBC: Gareth Bale: Tottenham re-sign Real Madrid forward on loan"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/bale" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="7dp"
        android:paddingLeft="7dp"
        android:text="Tottenham have re-signed Wales forward Gareth Bale from Spanish champions Real Madrid on a season-long loan...."
        android:textColor="@color/black" />

</LinearLayout>