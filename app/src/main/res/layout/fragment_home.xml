<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainbowred"
                    android:text="Sport" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPolitics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainboworange"
                    android:text="Politics" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainbowyellow"
                    android:text="Food" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainbowgreen"
                    android:text="UK" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCovid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:text="Covid"
                    app:backgroundTint="@color/rainbowblue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonTottenham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainbowindigo"
                    android:text="Tottenham" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonGaming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rainbowviolet"
                    android:text="Gaming" />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <include
                layout="@layout/card_news_content_example1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3E3B3B" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <include
                layout="@layout/card_news_content_example2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <include
                layout="@layout/card_news_content_example3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>